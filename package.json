{
  "name": "nodejs-app-with-docker",
  "version": "1.0.0",
  "description": "A simple NodeJS app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "docker-build": "docker build -t achaukin/simple-node-app:latest .",
    "docker-run": "docker run --name node-app -p 4001:8081 achaukin/simple-node-app",
    "docker-start": "npm run docker-build && npm run docker-run",
    "docker-stop": "docker stop node-app && docker system prune -f",
    "test": "echo \"No test specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonChaukin/nodejs-app-with-docker.git"
  },
  "author": "Anton Chaukin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AntonChaukin/nodejs-app-with-docker/issues"
  },
  "homepage": "https://github.com/AntonChaukin/nodejs-app-with-docker#readme",
  "devDependencies": {
    "axios": "^0.19.2",
    "jest": "^26.0.1"
  },
  "dependencies": {
    "express": "*",
    "redis": "^3.0.2"
  }
}
